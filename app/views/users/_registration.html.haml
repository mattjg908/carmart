.row
  .large-3.columns
    = form_for @user, :remote => true do |f|
      = f.label :name
      = f.text_field :name, :autofocus => true
      = f.label :email
      = f.text_field :email
      = f.label :password
      = f.password_field :password
      = f.label :password_confirmation
      = f.password_field :password_confirmation
      = button_to_function('Cancel', 'cancel_user_form()',:class => 'button radius tiny alert')
      = f.submit 'Create Account', :id => 'create_user_button', :class => 'button radius success tiny'
  .large-9.columns