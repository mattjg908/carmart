.row
  .format
    = form_tag '/login' do
      = label_tag :email
      = text_field_tag :email, nil, :autofocus => true
      = label_tag :password
      = password_field_tag :password
      = button_to_function('Cancel', 'cancel_login_form()', :class => 'tiny button alert')
      = submit_tag 'Login', :class => 'tiny button success radius'